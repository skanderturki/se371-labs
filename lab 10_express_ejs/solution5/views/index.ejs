<%- include("./partials/header") %>
    <main class="main">
      <section class="cards_section">
        <% if(chairs != null) { %>
          <% chairs.forEach( (chair) => { %>
            <article class="card">
              <img src="<%= chair.img %>" alt="<%= chair.alt %>">
              <h2><%= chair.name %></h2>
              <p><%= chair.price %> SAR</p>
              <button>Buy</button>
            </article>
          <% }) %>
        <% } else { %>
          <p>No data to display ...</p>
        <% } %>
      </section>
    </main>
<%- include("./partials/footer") %>
