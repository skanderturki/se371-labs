<%- include("./partials/header.ejs") %>
    <main class="main">
      <section class="cards_section">
        <% if(chairs && chairs.length > 0) { %>
          <% chairs.forEach( chair => { %>
            <article class="card">
              <img src="<%= chair.img %>" alt="<%= chair.alt %>">
              <h2><%= chair.name %></h2>
              <p><%= chair.price %> SAR</p>
              <button>Buy</button>
            </article>
          <% }); %>
        <% } else { %>
          <p>These is no data to display....</p>
        <% }; %>
      </section>
    </main>
