<%- include('./partials/header') %>
    <main class="main">
      <section class="search_section">
        <%- include('./partials/searchForm') %>
      </section>
      <section class="cards_section">
        <% if(chairs){ %>
          <% chairs.forEach((chair) => { %>
            <article class="card">
              <img src="<%= chair.img %>" alt="<%= chair.alt %>">
              <h2><%= chair.name %></h2>
              <h3>(<%= chair.type %>)</h3>
              <p><%= chair.price %> SAR</p>
              <button>Buy</button>
            </article>
          <% }); %>
        <% } %>
      </section>
    </main>
<%- include('./partials/footer') %>

